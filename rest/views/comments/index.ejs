<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get All Comment</title>
  </head>
  <body>
    <ul>
      <% comments.forEach((comment) => { %>
      <li>
        <h3><%= comment.username %></h3>
        <p><%= comment.text %></p>
        <a href="/comments/<%= comment.id %>">Detail Comment</a>
        <a href="/comments/<%= comment.id %>/edit">Edit Comment</a>
        <form
          action="/comments/<%= comment.id %>
          ?_method=DELETE"
          method="POST">
          <button>Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <a href="/comments/create">Tambah Comment</a>
  </body>
</html>
